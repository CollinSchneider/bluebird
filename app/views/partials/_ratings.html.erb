<% @ratings.each do |rating| %>
  <div class="border order-box z-depth-1">
    <h5 style='display: inline-block'><%= rating.sale.retailer.user.company.company_name %>: <%= rating.rating.to_i %>/5</h5>
    <div class="star-ratings-css" style='display: inline-block'>
      <div class="star-ratings-css-top" style="width: <%=(rating.rating/5)*100%>%"><span>★</span><span>★</span><span>★</span><span>★</span><span>★</span></div>
      <div class="star-ratings-css-bottom"><span>★</span><span>★</span><span>★</span><span>★</span><span>★</span></div>
    </div>
    <h6><%= rating.created_at.strftime('%b %d, %Y') %></h6>
    <p>
      <%= image_tag rating.sale.commit.product.main_image.url(:medium), :class => 'thumbnail' %>
      <%= rating.comment %>
    </p>
  </div>
<% end %>
