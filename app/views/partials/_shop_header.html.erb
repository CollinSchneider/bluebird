
<%
  header_products = Product.where("status = 'live'").limit(4)
-%>
<script>
  $(document).ready(function(){
    $('.slides').fadeIn()
  })
</script>

<div class="col s12 slider-div row">
  <div class="slider">
    <ul class="slides" style='display: none'>
      <% header_products.each do|product| %>
        <li class='slide col s12 center-align'>
          <a href="/products/<%=product.id %>/<%=product.slug %>">
            <%= image_tag product.main_image.url(:large), :class => 'slider-image' %>
            <!-- <#%= image_tag Product.where("status = 'live'").last.main_image.url(:large), :class => 'responsive-img' %> -->
            <div class="caption center-align black-text" style='background: rgba(255, 255, 255, .85)'>
              <h3><%= product.title %></h3>
              <h5><%= product.short_description %></h5>
            </div>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>


<script>
  $(document).ready(function(){
    $('.slider').slider({full_width: true});
  });
</script>
