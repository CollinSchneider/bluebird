  <%= render partial: 'partials/wholesaler_profile_nav' %>

  <div class="col s12 m8 l9 offset-m3 offset-l2 edit-order-box z-depth-2" style="margin-top: 25px">

    <h4>Settings</h4>
    <h6 class='green-text'><%= flash[:success] %></h6>
    <h6 class='red-text'><%= flash[:notice] %></h6>
    <% if !flash[:error].nil? %>
      <% flash[:error].each do |err| %>
        <h6 class='red-text'><%= err %></h6>
        <% end %>
    <% end %>
     <div class="row center-align">
      <%= form_tag('/api/wholesalers/update_account') do %>
      <div class="row">
        <div class="input-field">
          <div class="col s6">
            <%= label_tag "First Name" %>
            <input type="text" name="user[first_name]" value="<%= current_user.first_name%>">
            <!-- <#%= text_field_tag :first_name, :value => current_user.first_name, :id => 'first-name' %> -->
          </div>
        </div>
        <div class="input-field">
