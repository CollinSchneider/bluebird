            <!-- <#%= text_field_tag :last_name, :value => current_user.last_name, :id => 'last-name' %> -->
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col s6">
          <div class="input-field">
            <%= label_tag "Email (for signin and BlueBird use)" %>
            <input type="email" name="user[email]" value="<%= current_user.email %>">
            <!-- <#%= email_field_tag :email, :value => current_user.email, :id => 'email' %> -->
          </div>
        </div>
        <div class="col s6">
          <div class="input-field">
            <%= label_tag "Phone Number (for BlueBird use)" %>
            <input type="text" name="user[phone_number]" value="<%= current_user.phone_number %>">
            <!-- <#%= text_field_tag :phone_number, :value => current_user.phone_number, :id => 'phone-number' %> -->
          </div>
        </div>
      </div>

        <div class="input-field row">
          <%= submit_tag "Update Account", :class => 'btn' %>
        </div>
      <% end %>
    </div>

