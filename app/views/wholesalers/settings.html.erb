<div class="row">

<%= render partial: 'partials/wholesaler_profile_nav' %>

<div class="col s12 m9 offset-m3 offset-l2">

  <h4>Settings</h4>
  <div class="row center-align">
    <%= form_for current_user do |f| %>
      <div class="input-field">
        <%= f.label "First Name" %>
        <%= f.text_field :first_name, :value => current_user.first_name %>
      </div>
      <div class="input-field">
        <%= f.label "Last Name" %>
        <%= f.text_field :last_name, :value => current_user.last_name %>
      </div>
        <h5>Allow other users to contact you?</h5>
        <div class="input-field">
          <%= f.label "Yes" %>
          <%= f.radio_button :contactable, :value => true %>
        </div>
        <div class="input-field">
          <%= f.label "No" %>
          <%= f.radio_button :contactable, :value => false %>
        </div>
      <div class="input-field">
        <%= f.label "Email" %>
        <%= f.text_field :email, :value => current_user.email %>
      </div>
      <div class="input-field">
        <%= f.label "Phone Number" %>
        <%= f.text_field :phone_number, :value => current_user.phone_number %>
      </div>
      <%= f.submit "Update Account", :class => 'btn' %>
    <% end %>
  </div>

  <div class="row">
    <div class="left-align col s6">
      <a href="/settings/wholesaler/change_password" class='btn'>Change Password</a>
    </div>
    <div class="right-align col s6">
      <%= link_to "Delete Account", user_path(current_user.id), method: :destroy, :class => 'btn red', data: {confirm: "Are you sure you want to delete your account?"} %>
    </div>
  </div>

</div>

</div>
