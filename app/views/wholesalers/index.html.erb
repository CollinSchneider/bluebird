<%= button_to "Logout", sessions_path, method: :delete %>
<%= button_to "Home", products_path, method: :get %>

<h1>Hello <%= current_user.email %> Wholesaler!</h1>

<div style="border: 1px solid black">
  <%= form_for Product.new do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.label :title %>
    <%= f.text_field :title %> <br>
    <%= f.label :description %>
    <%= f.text_field :description %> <br>
    <%= f.label :price %>
    <%= f.number_field :price %> <br>
    <%= f.submit "Create Product!" %>
  <% end %>
</div>
<br><br>

<h3> Products you are listing: </h3>
<% current_user.products.each do |product| %>
 <div style ="border: 1px solid black">
    <h3><%= link_to product.title, edit_product_path(product.id) %></h3>
    <h3>$<%= product.price %></h3>
    <h4><%= product.description %></h4>
    <% product.milestones.each do |milestone| %>
      <h5> Goal: <%= milestone.goal %> </h5>
      <h5> Discount: <%= milestone.discount %> </h5>
    <% end %>
  </div>
<% end %>
