<div class="navigation row no-margin z-depth-2" style="padding-top: 10px; padding-bottom: 10px">
  <div class="col s12 valign-wrapper">
    <div class="col s4 m2 no-margin" style="margin: 0px">
      <a href="/">
        <img src="/images/bluebird-blue-text.png" alt="" style='height: 40px'/>
      </a>
    </div>
  </div>
</div>

<div class="row no-overflow no-bottom-margin">
  <div class="white-text center-align col m12 l6" style='background: lightgrey; min-height: calc(100vh - 60px)'>
      <h3>Retailer Application</h3>
      <%= form_tag(method: 'POST') do %>
        <div class="input-field col s12">
          <input type="text" name="company[company_name]" class='full-box-input' placeholder='Company Name' required>
        </div>
        <!-- <div class="input-field col s12">
          <input type="text" name="company[location]" class='full-box-input' placeholder='City (ie: New York, NY)' required>
        </div> -->
        <div class="row">
          <div class="col s6">
            <div class="input-field">
              <input type="text" name="user[first_name]" class='full-box-input' placeholder='First Name' required>
            </div>
          </div>
          <div class="col s6">
            <div class="input-field">
              <input type="text" name="user[last_name]" class='full-box-input' placeholder='Last Name' required>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col s6">
            <div class="input-field">
              <input type="email" name="user[email]" class='full-box-input' placeholder='Email' required>
            </div>
          </div>
          <div class="col s6">
            <div class="input-field">
              <input type="number" name="user[phone_number]" class='full-box-input' placeholder='Phone Number (BlueBird Use Only)' required>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col s6">
            <div class="input-field">
              <input type="password" name="user[password]" class='full-box-input' placeholder='Password' required>
            </div>
          </div>
          <div class="col s6">
            <div class="input-field">
              <input type="password" name="user[password_confirmation]" class='full-box-input' placeholder='Confirm Password' required>
            </div>
          </div>
        </div>

      <%= submit_tag "Apply", :class => 'white black-text submit-button btn' %>
    <% end %>
  </div>

  <div class="col l6 hide-on-med-and-down bluebird valign-wrapper white-text" style='min-height: calc(100vh - 60px)'>
    <h3 class='center-block'>Never pay full price again.</h3>
  </div>

</div>
