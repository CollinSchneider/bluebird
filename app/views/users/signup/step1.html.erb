
<div class="col s1" style="position: absolute; margin-top: 20px; margin-left: 20px">
  <a href="/users">
    <img src="/images/bluebird-white-text.png" class='responsive-img' style="width: 20%" />
  </a>
  <div class="row left-align white-text">
    <h6>Wholesaler?</h6>
    <a href="/apply/step1" class='btn-flat left-align white-text waves-effect'>Sign Up Here</a>
  </div>
</div>

<div class="row no-overflow no-bottom-margin">
  <div class="apply-body bluebird white-text center-align col s12 valign-wrapper" style='height: 60vh'>

    <div class="valign col s12">
      <div class="row col s8 offset-s2">
        <h4>Retailer Signup</h4>
        <%= form_tag(method: 'POST') do %>
          <div class="input-field">
            <label>Company Name</label>
            <input type="text" name="company[company_name]" required>
          </div>
          <div class="input-field">
            <label>City</label>
            <input type="text" name="company[location]" required>
          </div>
        <%= submit_tag "Next", :class => 'white black-text btn' %>
        <!-- <input type="submit" value="Next" class='white black-text btn'> -->
      <% end %>
      <% if !flash[:error].nil? %>
        <% flash[:error].each do |err| %>
          <h6 class='red-text'><%= err %></h6>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>

  <div class="apply-body col s12 hidden-on-small-only valign-wrapper" style='height: 40vh'>
    <div class="col s8 offset-s2 valign center-align">
      <div class="row no-bottom-margin">
        <h5>Never pay full wholesale price again. Discounts. Every. Single. Time.</h5>
      </div>
      <div class="row">
        <div class="col s4 offset-s4">
          <img src="/images/money.jpg" class='responsive-img circle'/>
        </div>
      </div>
    </div>
  </div>

</div>
