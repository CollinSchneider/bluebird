<div class="row col s12" style='position: fixed; top: 5px'>
  <div class="col s4 white-text center-align">
    <a href="/users">
      <img src="/images/bluebird-white-text.png" class='responsive-img' style='width: 80%' />
    </a>
      <h6 class='white-text'>Wholesaler?</h6>
      <a href="/apply/step2?uuid=<%= params[:uuid] %>" class='white-text waves-effect'>APPLY UP HERE</a>
  </div>
</div>

<div class="row no-overflow no-bottom-margin" style='overflow: hidden !important'>

  <div class="bluebird white-text center-align col s12">
    <div class="row">
      <div class="col s12">
        <h5>Retailer Application</h5>
      </div>
    </div>
    <div class="col s12">
      <div class="row col s8 offset-s2">
        <%= form_tag do |f| %>
          <% if !flash[:error].nil? %>
            <% flash[:error].each do |err, msg| %>
              <div class="row">
                <h6 class='red-text'><%= err %> <%= msg %></h6>
              </div>
            <% end %>
          <% end %>
          <input type="hidden" name="uuid" value="<%= params[:uuid] %>">
          <div class="row">
            <div class="col s6">
              <div class="input-field">
                <!-- <label>First Name</label> -->
                <input type="text" name="user[first_name]" class='full-box-input' placeholder='First Name' required>
              </div>
            </div>
            <div class="col s6">
              <div class="input-field">
                <!-- <label>Last Name</label> -->
                <input type="text" name="user[last_name]" class='full-box-input' placeholder='Last Name' required>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col s6">
              <div class="input-field">
                <!-- <label>Email</label> -->
                <input type="text" name="user[email]" class='full-box-input' placeholder='Email' required>
              </div>
            </div>
            <div class="col s6">
              <div class="input-field">
                <!-- <label>Phone Number</label> -->
                <input type="tel" name="user[phone_number]" class='full-box-input' placeholder='Phone Number' required>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col s6">
              <div class="input-field">
                <!-- <label>Password</label> -->
                <input type="password" name="user[password]" class='full-box-input' placeholder='Password' required>
              </div>
            </div>
            <div class="col s6">
              <div class="input-field">
                <!-- <label>Confirm Password</label> -->
                <input type="password" name="user[password_confirmation]" class='full-box-input' placeholder='Confirm Password' required>
              </div>
            </div>
          </div>
          <input type="submit" value="Apply" class='white black-text submit-button btn'>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col s12 hidden-on-small-only valign-wrapper">
    <div class="valign">
      <div class="row">
        <div class="col s12 center-align">
          <h5>Reach sales goals you never thought possible</h5>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <div class="col s4 offset-s4 m2 offset-m5 center-align">
            <img src="/images/target.jpg" class='responsive-img circle'/>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
