<div class="row no-overflow">

  <div class="apply-body col m6 hidden-on-small-only valign-wrapper">
    <div class="col s8 offset-s2 valign center-align">
      <div class="row">
        <h5>Reach sales goals you never thought possible</h5>
      </div>
      <div class="row">
        <div class="col s8 offset-s2">
          <img src="/images/target.jpg" class='responsive-img circle'/>
        </div>
      </div>
    </div>
  </div>

  <div class="apply-body bluebird white-text center-align col s12 m6 valign-wrapper">
    <div class="valign col s12">
      <div class="row">
        <div class="col s4 grey-text">
          <h4>Step 1</h4>
          <h5>The Basics</h5>
        </div>
        <div class="col s4">
          <h4>Step 2</h4>
          <h5>Your Business</h5>
        </div>
        <div class="col s4 grey-text">
          <h4>Step 3</h4>
          <h5>Finishing Touches</h5>
        </div>
      </div>
      <div class="row col s8 offset-s2">
        <%= form_tag do |f| %>
          <% if !flash[:error].nil? %>
            <% flash[:error].each do |err, msg| %>
              <div class="row">
                <h6 class='red-text'><%= err %> <%= msg %></h6>
              </div>
            <% end %>
          <% end %>
          <input type="hidden" name="uuid" value="<%= params[:uuid] %>">
          <div class="input-field">
            <label>Company Name</label>
            <input type="text" name="company_name">
          </div>
          <div class="input-field">
            <label>Contact Phone</label>
            <input type="text" name="phone_number">
          </div>
          <input type="submit" value="Next" class='white black-text btn'>
        <% end %>
      </div>
    </div>
  </div>

</div>
