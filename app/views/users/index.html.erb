
<div class="container" id='landing-container'>
  <div id="cover-photo">
    <div class="row">
      <div class="col s12">
        <div class="card white center" id='login-container'>
          <div class="card-content white-text">
            <span class="card-title" id='logo'>Title</span>
            <div class="row">
              <div class="input-field col s12" id='login-content' style="color:black">
                <%= form_tag sessions_path do %>
                  <p style="color:black">Email</p>
                  <%= text_field_tag :email %> <br>
                  <p style="color:black">Password</p>
                  <%= password_field_tag :password %> <br>
                  <%= submit_tag "Log In", :class => 'btn' %>
                <% end %>
              </div>
          </div>
            <% if flash[:error] %>
              <% flash[:error].each do |error| %>
                <p class = "error" style = "color: red"> <%= error %> </p>
              <% end %>
            <% end %>
            <div class="card-action">
              <a class='btn btn-primary' href="/wholesaler_signup">Wholesaler Signup!</a><br>
              <a class='btn btn-primary' href="/retailer_signup">Retailer Signup!</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
