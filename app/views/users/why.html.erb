<script>
  // var height = $('.section-white').height()
  // var navHeight = $('.navigation').height()
  // $('#first-div').css({
  //   height: height - navHeight
  // })

  $(window).scroll(function(){
    console.log($(window).scrollTop());
    var scroll = $(window).scrollTop()
    $('.parallax-div').css({
      marginTop: (-scroll/2) + 50
    })
    if(scroll > 150) {
      $('.sticky-navigation').fadeIn()
      $('.sticky-navigation').css({
        display: 'inherit'
      })
    }
    if(scroll < 150) {
      $('.sticky-navigation').css({
        display: 'none'
      })
    }
    if(scroll < 151) {
      $('.sticky-navigation').fadeOut()
    }
  })

  $('.how-it-works').click(function(){
    animateScrollTo($('.how-it-works-div'))
  })

  $('.wholesaler').click(function(){
    animateScrollTo($('.wholesalers-div'))
  })

  $('.retailer').click(function(){
    animateScrollTo($('.retailers-div'))
  })

  function animateScrollTo(div) {
    $('html, body').animate({
      scrollTop: div.offset().top
    }, 700)
  }
</script>
