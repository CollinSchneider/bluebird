<div class="row col m12 hide-on-small-only" style='position: fixed; top: 5px'>
  <div class="col s4 white-text center-align">
    <a href="/users">
      <img src="/images/bluebird-white-text.png" class='responsive-img' style='width: 80%' />
    </a>
      <h6 class='white-text'>Retailer?</h6>
      <a href="/signup/step2?uuid=<%= params[:uuid] %>" class='btn-flat white-text waves-effect'>Sign Up Here</a>
  </div>
</div>


<div class="row no-overflow">

  <div class="apply-body bluebird white-text center-align col s12" style='height: 60vh'>
    <div class="row">
      <div class="col s12">
        <h5>Wholesaler Sign Up</h5>
      </div>
    </div>
    <div class="col s12">
      <div class="row col s12 m8 offset-m2">
        <%= form_tag do |f| %>
          <input type="hidden" name="uuid" value="<%= params[:uuid] %>">
          <div class="row">
            <div class="col s12 m6">
              <div class="input-field">
                <!-- <label>First Name</label> -->
                <input class='full-box-input' type="text" name="user[first_name]" placeholder='First Name'>
              </div>
            </div>
            <div class="col s12 m6">
              <div class="input-field">
                <!-- <label>Last Name</label> -->
                <input class='full-box-input' type="text" name="user[last_name]" placeholder='Last Name'>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col s12 m6">
              <div class="input-field">
                <!-- <label>Email</label> -->
                <input class='full-box-input' type="text" name="user[email]" placeholder='email'>
              </div>
            </div>
            <div class="col s12 m6">
              <div class="input-field">
                <!-- <label>Phone Number</label> -->
                <input class='full-box-input' type="tel" name="user[phone_number]" placeholder='Phone Number (BlueBird Use Only)'>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col s12 m6">
              <div class="input-field">
                <!-- <label>Password</label> -->
                <input class='full-box-input' type="password" name="user[password]" placeholder='Password'>
              </div>
            </div>
            <div class="col s12 m6">
              <div class="input-field">
                <!-- <label>Confirm Password</label> -->
                <input class='full-box-input' type="password" name="user[password_confirmation]" placeholder='Confirm Password'>
              </div>
            </div>
          </div>
          <input type="submit" value="Apply" class='white black-text btn submit-button'>
        <% end %>
      </div>
    </div>
  </div>

  <div class="apply-body col s12 hidden-on-small-only valign-wrapper" style='height: 40vh'>
    <div class="valign">
      <div class="row">
        <div class="col s12 center-align">
          <h5>Reach sales goals you never thought possible</h5>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <div class="col s4 offset-s4 m2 offset-m5 center-align">
            <img src="/images/target.jpg" class='responsive-img circle'/>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
