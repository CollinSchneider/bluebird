<%= link_to "Profile", wholesaler_path %>
<%= link_to "Products Home", products_path %>

<h2> <%= @product.title %> </h2>
<h3> <%= @product.price %> </h3>
<h5> <%= @product.description %> </h5>
<h5> <%= @product.user.email %> </h5>
<br>
<h3>Milestones: </h3>
<% @product.milestones.each do |milestone| %>
  <h5>Goal: <%= milestone.goal %> </h5>
  <h5>Discount: <%= milestone.discount %> </h5>
<% end %>

<%= form_for Milestone.new do |f| %>
  <%= f.label :goal %>
  <%= f.number_field :goal %> <br>
  <%= f.label :discount %>
  <%= f.text_field :discount %> <br>
  <%= f.hidden_field :product_id, :value => @product.id %>
  <%= f.submit "Create Milestone for #{@product.title}" %>
<% end %>
